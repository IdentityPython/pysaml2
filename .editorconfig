root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 79

[*.y{a,}ml]
indent_size = 2
tab_width = 2

[*.html]
indent_style = tab

[*.js]
indent_style = tab

[*.css]
indent_style = tab
